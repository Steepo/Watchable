<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/watchlistButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/main_title"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        tools:srcCompat="@drawable/ic_favorite_void_24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="20dp"
        app:cardElevation="20dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_cover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/iron" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        app:layout_constraintStart_toStartOf="@+id/cardview"
        app:layout_constraintTop_toBottomOf="@id/cardview"
        tools:text="Star Wars: The Rise of Skywalker" />

    <androidx.cardview.widget.CardView
        android:id="@+id/similarcard1"
        android:layout_width="@dimen/similar_width"
        android:layout_height="@dimen/similar_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardElevation="20dp"
        app:layout_constraintStart_toEndOf="@id/cardview"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="20dp"
        app:layout_constraintEnd_toStartOf="@id/similarcard2"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/similar1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/iron" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/similarcard2"
        android:layout_width="@dimen/similar_width"
        android:layout_height="@dimen/similar_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/similarcard1"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="20dp"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/similar2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/iron" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/similarcard4"
        android:layout_width="@dimen/similar_width"
        android:layout_height="@dimen/similar_height"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="20dp"
        app:cardElevation="20dp"
        app:layout_constraintStart_toStartOf="@id/similarcard2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/similarcard2"
        >

        <ImageView
            android:id="@+id/similar4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/iron" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/similarcard3"
        android:layout_width="@dimen/similar_width"
        android:layout_height="@dimen/similar_height"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="20dp"
        app:cardElevation="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/similarcard1"
        app:layout_constraintStart_toStartOf="@id/similarcard1"
        >

        <ImageView
            android:id="@+id/similar3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/iron" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_similar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Altri Simili"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/similarcard3"
        app:layout_constraintEnd_toEndOf="@id/similarcard4"
        app:layout_constraintTop_toBottomOf="@id/similarcard3"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/container_generi"
        app:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_similar">
    </com.google.android.material.chip.ChipGroup>




    <TextView
        android:id="@+id/trama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_generi"
        tools:text="The surviving Resistance faces the First Order once again as the journey of Rey, Finn and Poe Dameron continues. With the power and knowledge of generations behind them, the final battle begins." />



    <androidx.cardview.widget.CardView
        android:id="@+id/trailercardview"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/trama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="20dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/youtube_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/youtube"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/cast_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/trailercardview"
        layout="@layout/title_recyclerview" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/similarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cast_view"

        >

        <TextView
            android:id="@+id/item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="16dp"
            android:text="Similar Movies" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/similar_recylerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/item_textview"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>