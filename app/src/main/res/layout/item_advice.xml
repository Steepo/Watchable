<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewadvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_advice"
            android:layout_width="100dp"
            android:layout_height="150dp"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/cardviewadvice"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/container_generi"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/cardviewadvice"
        app:layout_constraintTop_toBottomOf="@id/title_advice"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textAppearance="@style/chipTextAppearance"
            android:textColor="@color/colorPrimary"
            app:checkedIconEnabled="true"
            app:chipBackgroundColor="@color/colorChip"></com.google.android.material.chip.Chip>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textAppearance="@style/chipTextAppearance"
            android:textColor="@color/colorPrimary"
            app:checkedIconEnabled="true"
            app:chipBackgroundColor="@color/colorChip"></com.google.android.material.chip.Chip>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textAppearance="@style/chipTextAppearance"
            android:textColor="@color/colorPrimary"
            app:checkedIconEnabled="true"
            app:chipBackgroundColor="@color/colorChip"></com.google.android.material.chip.Chip>

    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:id="@+id/trama_advice"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginStart="124dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/googlesans_regular"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:maxLines="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardviewadvice"
        app:layout_constraintTop_toBottomOf="@+id/container_generi" />
</androidx.constraintlayout.widget.ConstraintLayout>