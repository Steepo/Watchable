<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    tools:context=".ui.activity.ActivityFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="AttivitÃ  recenti"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle_icon_shape"
        android:src="@drawable/avatar_darkgrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Ti consigliamo anche"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_advice"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@drawable/shaw"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/googlesans_medium"
            android:text="Hoobs and Shaw"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/cardviewadvice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/genders1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/botton_radius_genders"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/googlesans_medium"
            android:padding="3dp"
            android:text="Azione"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/cardviewadvice"
            app:layout_constraintTop_toBottomOf="@+id/tvadvice" />

        <TextView
            android:id="@+id/genders2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/botton_radius_genders"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/googlesans_medium"
            android:padding="3dp"
            android:text="Fantasy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/genders1"
            app:layout_constraintTop_toBottomOf="@+id/tvadvice" />

        <TextView
            android:id="@+id/genders3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/botton_radius_genders"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/googlesans_medium"
            android:padding="3dp"
            android:text="Guerra"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/genders2"
            app:layout_constraintTop_toBottomOf="@+id/tvadvice" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="230dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/googlesans_regular"
            android:text="Hobbs, veterano del Diplomatic Security Service, e Shaw, emarginato fuorilegge ed ex membro dell'esercito inglese, stringono una improbabile alleanza quando l'anarchico Brixton giunge in possesso di armi biologiche dal potenziale catastrofico."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/cardviewadvice"
            app:layout_constraintTop_toBottomOf="@+id/genders1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>